{
  "nextjs": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "promptTriggers": {
      "keywords": [
        "next.js",
        "nextjs",
        "app router",
        "app directory",
        "server component",
        "client component",
        "server action",
        "generateMetadata",
        "generateStaticParams",
        "next/navigation",
        "next/link",
        "use client"
      ],
      "intentPatterns": [
        "create.*(page|route|layout|component)",
        "add.*(page|route|layout|component)",
        "build.*component",
        "make.*component",
        "add.*route.*handler",
        "create.*api.*route",
        "add.*server.*action",
        "create.*server.*component",
        "create.*client.*component",
        "add.*metadata",
        "create.*loading.*state",
        "add.*error.*boundary",
        "implement.*dynamic.*route"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "**/app/**/*.tsx",
        "**/app/**/*.ts",
        "**/components/**/*.tsx",
        "**/next.config.js",
        "**/next.config.mjs"
      ]
    }
  }
}
